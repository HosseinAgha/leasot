{
  "name": "leasot",
  "description": "Parse and output TODOs and FIXMEs from comments in your files",
  "version": "7.0.0-rc.7",
  "author": "Gilad Peleg <giladp007@gmail.com> (http://giladpeleg.com)",
  "bin": {
    "leasot": "./bin/leasot",
    "leasot-reporter": "./bin/leasot-reporter"
  },
  "dependencies": {
    "async": "^2.6.1",
    "chalk": "^2.4.1",
    "commander": "^2.18.0",
    "eol": "^0.9.1",
    "get-stdin": "^6.0.0",
    "globby": "^8.0.1",
    "json2xml": "^0.1.2",
    "lodash": "^4.17.11",
    "log-symbols": "^2.2.0",
    "strip-ansi": "^5.0.0",
    "text-table": "^0.2.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.49",
    "@types/get-stdin": "^5.0.1",
    "@types/globby": "^8.0.0",
    "@types/log-symbols": "^2.0.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.11.3",
    "@types/strip-ansi": "^3.0.0",
    "@types/text-table": "^0.2.0",
    "gh-pages": "^2.0.0",
    "husky": "^1.0.1",
    "jsdoc-to-markdown": "^4.0.1",
    "lint-staged": "^7.3.0",
    "mocha": "^5.2.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "should": "^13.2.3",
    "ts-node": "^7.0.1",
    "typedoc": "^0.12.0",
    "typescript": "^3.1.1"
  },
  "engines": {
    "node": ">=6.14.4"
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": [
    "fixme",
    "todo",
    "comments",
    "list",
    "parse",
    "generator",
    "ci",
    "productivity",
    "automation",
    "typescript",
    "prettier"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": "pgilad/leasot",
  "scripts": {
    "clean": "rimraf docs dist",
    "build": "tsc -p tsconfig.json",
    "docs": "typedoc --name leasot --readme none --out docs --target es6 --mode file --excludeNotExported --excludePrivate src",
    "docs:publish": "gh-pages -m '[ci skip] Updates' -d docs",
    "test": "mocha --require ts-node/register -R spec './tests/*.ts'",
    "prettier": "prettier --write 'src/**/*.ts' 'tests/*.ts'",
    "prettier-check": "prettier --list-different 'src/**/*.ts' 'tests/*.ts'",
    "release:prepare": "npm run clean && npm run prettier && npm run build && npm run test && npm run docs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.yml": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
